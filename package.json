{
  "name": "graphql-ext",
  "version": "1.5.7",
  "description": "GraphQL extensions and toolkit for JS.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf --glob tsconfig.tsbuildinfo dist *.tgz",
    "lint": "eslint . --format stylish --ext .ts",
    "test": "jest"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/graphql-ext-js",
  "bugs": {
    "url": "https://github.com/akornatskyy/graphql-ext-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/graphql-ext-js.git"
  },
  "keywords": [
    "api",
    "express",
    "graphql-js",
    "graphql",
    "http",
    "middleware",
    "relay",
    "validation"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./http": "./dist/http/index.js",
    "./misc": "./dist/misc/index.js",
    "./relay": "./dist/relay/index.js",
    "./validation": "./dist/validation/index.js",
    "./validation/rules": "./dist/validation/rules/index.js"
  },
  "typesVersions": {
    "*": {
      "http": [
        "dist/http"
      ],
      "misc": [
        "dist/misc"
      ],
      "relay": [
        "dist/relay"
      ],
      "validation": [
        "dist/validation"
      ],
      "validation/rules": [
        "dist/validation/rules"
      ]
    }
  },
  "peerDependencies": {
    "graphql": "^16.8.1",
    "raw-body": "^2.5.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__",
      "!**/dist"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      "tsconfig.*"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "no-null"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "off",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
