{
  "name": "graphql-ext",
  "private": "true",
  "version": "1.2.0",
  "description": "GraphQL extensions and toolkit for JS.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf tsconfig.tsbuildinfo dist *.tgz",
    "lint": "eslint . --format stylish --ext .ts",
    "test": "jest"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/graphql-ext-js",
  "bugs": {
    "url": "https://github.com/akornatskyy/graphql-ext-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/graphql-ext-js.git"
  },
  "keywords": [
    "api",
    "express",
    "graphql-js",
    "graphql",
    "http",
    "middleware",
    "relay",
    "validation"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./http": "./dist/http/index.js",
    "./misc": "./dist/misc/index.js",
    "./relay": "./dist/relay/index.js",
    "./validation": "./dist/validation/index.js",
    "./validation/rules": "./dist/validation/rules/index.js"
  },
  "typesVersions": {
    "*": {
      "http": [
        "dist/http"
      ],
      "misc": [
        "dist/misc"
      ],
      "relay": [
        "dist/relay"
      ],
      "validation": [
        "dist/validation"
      ],
      "validation/rules": [
        "dist/validation/rules"
      ]
    }
  },
  "peerDependencies": {
    "graphql": "^16.6.0",
    "raw-body": "^2.5.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^45.0.1",
    "express": "^4.18.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*/**/*.ts",
      "!**/__tests__",
      "!**/dist"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      "tsconfig.*"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "no-null"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "off",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
